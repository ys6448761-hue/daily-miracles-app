    "DEPOSIT_SLIP": {
      "label": "입금증",
      "required": false,
      "format": ["PDF", "JPG", "PNG"],
      "max_size_mb": 5
    },
    "BIZ_REG": {
      "label": "사업자등록증",
      "required": false,
      "format": ["PDF", "JPG", "PNG"],
      "max_size_mb": 5
    },
    "BANKBOOK": {
      "label": "통장사본",
      "required": true,
      "format": ["PDF", "JPG", "PNG"],
      "max_size_mb": 5,
      "note": "인센티브 입금 계좌"
    }
  },

