    },
    "PERSONAL_CARD": {
      "label": "개인카드",
      "accepted": false,
      "rejection_reason": "개인카드 사용분 불인정"
    },
    "SIMPLE_RECEIPT": {
      "label": "간이영수증",
      "accepted": false,
      "rejection_reason": "간이영수증 불인정"
    }
  },

  "evidence_types": {
    "TAX_INVOICE": {
      "label": "세금계산서",
      "required": true,
      "format": ["PDF", "JPG", "PNG"],
      "max_size_mb": 10
