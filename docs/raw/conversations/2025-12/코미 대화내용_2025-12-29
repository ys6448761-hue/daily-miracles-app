├── extract-user-data.ts     # 신규: 소원이 데이터 추출
├── generate-empty-files.ts  # 신규: 빈 파일 일괄 생성
├── parse-html-fonts.ts      # 신규: HTML 폰트 추출
└── batch-message-send.ts    # 신규: 메시지 일괄 발송


【스크립트 예시】

파일: scripts/extract-user-data.ts

/**
 * 소원이 데이터 추출 스크립트
 * 
 * 목적: 에이전트가 직접 DB 조회하면 컨텍스트 소모
 *       → 스크립트로 추출하고 결과만 전달
 * 
 * 사용법: npx ts-node scripts/extract-user-data.ts --userId=123
 * 출력: user-data-123.json
 */

import { PrismaClient } from '@prisma/client';

async function extractUserData(userId: string) {
  const prisma = new PrismaClient();
  
  const user = await prisma.user.findUnique({
    where: { id: userId },
    include: { wishes: true, messages: true }
  });
  
  // 파일로 저장 (에이전트는 이 파일만 읽으면 됨)
  const fs = require('fs');
  fs.writeFileSync(
    `output/user-data-${userId}.json`,
    JSON.stringify(user, null, 2)
  );
  
  console.log(`✅ 추출 완료: output/user-data-${userId}.json`);
}


