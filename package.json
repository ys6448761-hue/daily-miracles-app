{
  "name": "daily-miracles-mvp",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "start": "node server.js",
    "validate:rules": "node scripts/validateRules.js",
    "pipeline:weekly": "npx ts-node scripts/run-pipeline.ts",
    "pipeline:weekly:test": "npx ts-node scripts/run-pipeline.ts --team=테스트팀",
    "mcp:install": "cd mcp-servers/wishmaker-hub-mcp && uv sync && cd ../business-ops-mcp && uv sync && cd ../infra-monitor-mcp && uv sync",
    "mcp:test": "python scripts/test-all-mcp.py",
    "checklist:daily": "python scripts/daily-checklist.py",
    "checklist:weekly": "python scripts/weekly-checklist.py",
    "checklist:monthly": "python scripts/monthly-checklist.py",
    "backup-memory": "node scripts/backup-memory.js",
    "save-conversation": "node scripts/save-conversation.js",
    "memory:rebuild": "python tools/rebuild_team_memory_indexes_simple.py",
    "memory:lint": "python tools/lint_team_memory.py",
    "memory:digest": "python tools/generate_team_memory_digest.py",
    "memory:gate": "python tools/rebuild_team_memory_indexes_simple.py && python tools/lint_team_memory.py",
    "test:caption": "node tests/caption/captionService.test.js",
    "test:certificate": "node tests/certificate/certificateService.test.js",
    "test:postcard": "node tests/postcard/postcardService.test.js",
    "test:settlement": "node tests/settlement/settlement-v2-gate.js",
    "test:소원그림": "node tests/caption/captionService.test.js && node tests/certificate/certificateService.test.js && node tests/postcard/postcardService.test.js",
    "test:attendance": "node tests/attendance/attendanceService.test.js",
    "test:kst": "node tests/utils/kstDate.test.js",
    "test:p0": "node tests/utils/kstDate.test.js && node tests/attendance/attendanceService.test.js",
    "prisma:generate": "npx prisma generate --schema=prisma/schema.prisma",
    "migrate:deploy": "npx prisma migrate deploy --schema=prisma/schema.prisma",
    "db:push": "npx prisma db push --schema=prisma/schema.prisma",
    "start:console": "node server.js",
    "test:quotes:compare": "node compare-quotes.js quotes_before.json quotes_after.json"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@notionhq/client": "^5.6.0",
    "@prisma/client": "^5.22.0",
    "@sendgrid/mail": "^8.1.6",
    "@sparticuz/chromium": "^131.0.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "archiver": "^6.0.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.3",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "openai": "^6.3.0",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "puppeteer-core": "^24.0.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.5",
    "solapi": "^5.5.3",
    "uuid": "^10.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "optionalDependencies": {
    "sqlite3": "^5.1.7"
  },
  "overrides": {
    "puppeteer": {
      "chromium": "latest"
    }
  }
}
